{
  "name": "comet-backend",
  "version": "1.0.9",
  "description": "TypeScript SDK for Comet Chat Backend APIs",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gilbishkosma/comet-backend.git"
  },
  "keywords": [
    "comet",
    "chat",
    "backend",
    "sdk",
    "typescript",
    "api",
    "messaging"
  ],
  "author": "gibeeshkosma15@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Gilbishkosma/comet-backend/issues"
  },
  "homepage": "https://github.com/Gilbishkosma/comet-backend#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
